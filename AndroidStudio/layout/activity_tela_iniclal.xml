<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/telaInicial"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/LogoImuana"
        android:layout_width="260dp"
        android:layout_height="249dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo_imuana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/BordaLogin"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/borda_azul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LogoImuana" />

    <Button
        android:id="@+id/BotaoLogin"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/BordaLogin"
        app:layout_constraintBottom_toBottomOf="@id/BordaLogin"
        app:layout_constraintStart_toStartOf="@id/BordaLogin"
        app:layout_constraintEnd_toEndOf="@id/BordaLogin" />


    <FrameLayout
        android:id="@+id/loginTextoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/BordaLogin"
        app:layout_constraintBottom_toBottomOf="@id/BordaLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/loginContorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="LOGIN"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1" />




        <TextView
            android:id="@+id/loginTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="LOGIN"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFF" />
    </FrameLayout>

    <View
        android:id="@+id/BordaCadastro"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/borda_azul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BordaLogin" />

    <Button
        android:id="@+id/BotaoCadastro"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/BordaCadastro"
        app:layout_constraintBottom_toBottomOf="@id/BordaCadastro"
        app:layout_constraintStart_toStartOf="@id/BordaCadastro"
        app:layout_constraintEnd_toEndOf="@id/BordaCadastro" />

    <FrameLayout
        android:id="@+id/cadastroTextoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/BordaCadastro"
        app:layout_constraintBottom_toBottomOf="@id/BordaCadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/cadastroContorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="CADASTRO"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1" />


        <TextView
            android:id="@+id/cadastroTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="CADASTRO"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </FrameLayout>

    <View
        android:id="@+id/BordaEsp"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/borda_azul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BordaCadastro" />

    <Button
        android:id="@+id/BotaoEsp"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/BordaEsp"
        app:layout_constraintBottom_toBottomOf="@id/BordaEsp"
        app:layout_constraintStart_toStartOf="@id/BordaEsp"
        app:layout_constraintEnd_toEndOf="@id/BordaEsp" />

    <FrameLayout
        android:id="@+id/EspTextoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/BordaEsp"
        app:layout_constraintBottom_toBottomOf="@id/BordaEsp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/EspContorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="ESP"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1" />


        <TextView
            android:id="@+id/EspTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="ESP"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>